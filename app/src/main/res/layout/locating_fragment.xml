<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@color/colorPureWhite">

        <Button
            android:id="@+id/stop"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="StopRecording"
            android:visibility="invisible" />

        <Button
            android:id="@+id/record"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="Record Sensor Data" />

        <Button
            android:id="@+id/locating"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:enabled="true"
            android:text="Determine Location" />

        <Button
            android:id="@+id/save"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="123dp"
            android:text="Save Sensor Data"
            android:visibility="invisible" />

        <Button
            android:id="@+id/discard"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txtY"
            android:text="Discard data"
            android:visibility="invisible" />

        <Button
            android:id="@+id/reset"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Reset Data" />

        <EditText
            android:id="@+id/txtX"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Enter X"
            android:ems="10"
            android:inputType="numberDecimal|numberSigned"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/txtY"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/stop"
            android:contentDescription="Enter Y"
            android:ems="10"
            android:inputType="numberDecimal|numberSigned"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrayBackground"
        android:fillViewport="true"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/record_data"
            android:fillViewport="true"
            android:paddingLeft="10dp"
            android:divider="#00000000"
            android:dividerHeight="10dp"
            />

    </LinearLayout>








</LinearLayout>